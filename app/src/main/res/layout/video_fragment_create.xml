<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/origin_pic"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/handle_pic"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:layout_weight="1"
            android:scaleType="centerInside" />
    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginRight="@dimen/margin_dp15"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/margin_dp10"
        android:textColor="@color/day_mode_text_color3_999999" />

    <Button
        android:id="@+id/select_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginTop="@dimen/margin_dp20"
        android:layout_marginRight="@dimen/margin_dp15"
        android:gravity="center"
        android:paddingTop="@dimen/margin_dp10"
        android:paddingBottom="@dimen/margin_dp10"
        android:text="选择视频"
        android:textColor="@color/white" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_dp15"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/tiqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp20"
                android:layout_marginRight="@dimen/margin_dp15"
                android:gravity="center"
                android:paddingTop="@dimen/margin_dp10"
                android:paddingBottom="@dimen/margin_dp10"
                android:text="提取帧图片"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/select_pic_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp20"
                android:layout_marginRight="@dimen/margin_dp15"
                android:gravity="center"
                android:paddingTop="@dimen/margin_dp10"
                android:paddingBottom="@dimen/margin_dp10"
                android:text="选择图片"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp20"
                android:layout_marginRight="@dimen/margin_dp15"
                android:gravity="center"
                android:paddingTop="@dimen/margin_dp10"
                android:paddingBottom="@dimen/margin_dp10"
                android:text="处理帧图片"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/hebing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp20"
                android:layout_marginRight="@dimen/margin_dp15"
                android:gravity="center"
                android:paddingTop="@dimen/margin_dp10"
                android:paddingBottom="@dimen/margin_dp10"
                android:text="合并视频"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>