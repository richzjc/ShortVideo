<?xml version="1.0" encoding="utf-8"?>
<com.richzjc.shortvideo.widget.RootTabItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_tab_item_style"
    android:layout_weight="1">


    <LinearLayout
        android:id="@+id/tab_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_dp52"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img"
            android:layout_width="@dimen/margin_dp20"
            android:layout_height="@dimen/margin_dp20"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tab_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp3"
            android:gravity="center"
            android:textSize="@dimen/text_size_11" />

    </LinearLayout>
</com.richzjc.shortvideo.widget.RootTabItem>