<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/day_mode_dialog_bg_color_ffffff"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_dp50"
        android:gravity="center"
        android:text="拍照"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/day_mode_text_color1_333333" />

    <TextView
        android:id="@+id/get_from_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_dp50"
        android:gravity="center"
        android:textSize="@dimen/text_size_16"
        android:text="从相册中选择"
        android:textColor="@color/day_mode_text_color1_333333" />

    <TextView
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_dp50"
        android:gravity="center"
        android:textSize="@dimen/text_size_16"
        android:text="取消"
        android:textColor="@color/day_mode_text_color3_999999" />

</LinearLayout>