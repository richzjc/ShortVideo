<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_dp15"
            android:cursorVisible="true"
            android:gravity="top"
            android:focusable="true"
            android:padding="@dimen/margin_dp10"
            android:background="@drawable/edit_drawable_wallpager"
            android:textCursorDrawable="@color/day_mode_theme_color_1478f0"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/select_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dp15"
        android:gravity="center"
        android:padding="@dimen/margin_dp15"
        android:text="选择图片"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/set_wallpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dp15"
        android:gravity="center"
        android:padding="@dimen/margin_dp15"
        android:text="设置壁纸"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>