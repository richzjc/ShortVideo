<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/handle_pic"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginRight="@dimen/margin_dp15"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/margin_dp10"
        android:textColor="@color/day_mode_text_color3_999999" />

    <EditText
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginTop="@dimen/margin_dp20"
        android:layout_marginRight="@dimen/margin_dp15"
        android:gravity="center"
        android:paddingTop="@dimen/margin_dp10"
        android:paddingBottom="@dimen/margin_dp10"
        android:inputType="number"
        android:hint="输入音频时长(单位秒)"
        android:textColor="@color/day_mode_text_color1_333333"
        android:textColorHint="@color/day_mode_text_color3_999999"
        />

    <Button
        android:id="@+id/select_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginTop="@dimen/margin_dp20"
        android:layout_marginRight="@dimen/margin_dp15"
        android:gravity="center"
        android:paddingTop="@dimen/margin_dp10"
        android:paddingBottom="@dimen/margin_dp10"
        android:text="选择一张图片"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/generate_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginTop="@dimen/margin_dp20"
        android:layout_marginRight="@dimen/margin_dp15"
        android:gravity="center"
        android:paddingTop="@dimen/margin_dp10"
        android:paddingBottom="@dimen/margin_dp10"
        android:text="生成图片"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/generate_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp15"
        android:layout_marginTop="@dimen/margin_dp20"
        android:layout_marginRight="@dimen/margin_dp15"
        android:gravity="center"
        android:paddingTop="@dimen/margin_dp10"
        android:paddingBottom="@dimen/margin_dp10"
        android:text="生成视频"
        android:textColor="@color/white" />

</LinearLayout>